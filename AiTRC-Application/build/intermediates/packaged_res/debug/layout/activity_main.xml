        android:layout_marginTop="249dp"
        android:textColor="#ffffff"
        android:background="@drawable/rounded_rectangle"
        android:text="Analog Cammunication" />

    <Button
        android:id="@+id/button31"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="313dp"
        android:textColor="#ffffff"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/white"
        android:text="Digital Signal Process" />

    <Button
        android:id="@+id/button41"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="378dp"
        android:textColor="#ffffff"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/white"
        android:text="Power Electronics" />

    <Button
        android:id="@+id/button51"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="442dp"
        android:textColor="#ffffff"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/white"
        android:text="Project Management" />

    <Button
        android:id="@+id/button61"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="506dp"
        android:textColor="#ffffff"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/white"
        android:text="Electric Field Theory" />

    <ImageView
        android:id="@+id/camBut"
        android:layout_width="47dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="231dp"
        android:layout_marginRight="231dp"
        android:layout_marginBottom="41dp"
        android:src="@drawable/camera" />

    <ImageView
        android:layout_width="47dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="157dp"
        android:layout_marginRight="157dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/chat" />

    <ImageView
        android:id="@+id/settingBut"
        android:layout_width="47dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        android:layout_marginBottom="38dp"
        android:src="@drawable/sett" />
</RelativeLayout>